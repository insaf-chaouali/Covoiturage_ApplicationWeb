{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block head %}
    <style>
        /* Style global */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f8ff; /* Bleu clair pour l'arrière-plan */
            background-image: url('https://www.dreux-agglomeration.fr/wp-content/uploads/2020/07/covoiturage_%C2%A9Freepik-Fanjianhua.jpg');
            background-size: cover;
            background-position: center;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            text-align: center;
            font-size: 34px;
            color: #003366; /* Bleu foncé pour le titre */
            margin-top: 40px;
            margin-bottom: 40px;
            font-weight: 600;
        }

        /* Table */
        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.8); /* Fond légèrement transparent pour une meilleure lisibilité */
            border-radius: 8px;
        }

        .table thead {
            background-color: #007b88; /* Bleu légèrement plus clair */
            color: white;
            text-transform: uppercase;
            font-size: 14px;
        }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 14px;
        }

        .table tbody tr:nth-child(even) {
            background-color: #d9e6f2; /* Bleu très clair pour les lignes paires */
        }

        .table tbody tr:hover {
            background-color: #a6c8e2; /* Bleu moyen pour le survol */
            transition: background-color 0.3s ease;
        }

        a {
            color: #007bff; /* Bleu clair pour les liens */
            text-decoration: none;
            font-weight: 600;
        }

        a:hover {
            text-decoration: underline;
            color: #004b6b; /* Assombrir le bleu au survol */
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .actions a {
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-transform: uppercase;
            font-weight: 600;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

        .actions a:first-child {
            background-color: #0092b6; /* Bleu moyen pour 'back to list' */
            color: white;
        }

        .actions a:first-child:hover {
            background-color: #007a95;
        }

        .actions a:last-child {
            background-color: #55c57a; /* Vert clair pour 'edit' */
            color: white;
        }

        .actions a:last-child:hover {
            background-color: #3da85d;
        }

        .create-new {
            display: block;
            width: fit-content;
            margin: 30px auto;
            padding: 12px 20px;
            background-color: #007a95;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 123, 255, 0.3);
            transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        }

        .create-new:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .create-new:active {
            transform: scale(1);
        }

        .no-records {
            text-align: center;
            color: #6c757d;
            font-size: 16px;
            font-weight: 600;
            padding: 15px 0;
        }

    </style>
{% endblock %}

{% block body %}
    <h1>Feedback Details</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ feedback.id }}</td>
        </tr>
        <tr>
            <th>Emetteur</th>
            <td>{{ feedback.emetteur }}</td>
        </tr>
        <tr>
            <th>Receveur</th>
            <td>{{ feedback.receveur }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ feedback.note }}</td>
        </tr>
        <tr>
            <th>Commentaire</th>
            <td>{{ feedback.commentaire }}</td>
        </tr>
        <tr>
            <th>Datefeedback</th>
            <td>{{ feedback.datefeedback ? feedback.datefeedback|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="actions">
        <a href="{{ path('app_feedback_index') }}" class="btn">Back to list</a>
        <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}" class="btn">Edit</a>
    </div>

    <div class="delete-form">
        {{ include('feedback/_delete_form.html.twig') }}
    </div>
{% endblock %}
