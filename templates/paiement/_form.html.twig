{% extends 'base.html.twig' %}

{% block title %}Ajouter Conducteur{% endblock %}

{% block head %}
    <style>
        /* Style global */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7fb;
            background-image: url('https://www.dreux-agglomeration.fr/wp-content/uploads/2020/07/covoiturage_%C2%A9Freepik-Fanjianhua.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #333;
            margin: 0;
            padding: 0;
            flex-direction: column;
        }

        /* Conteneur principal avec fond transparent */
        .form-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 500px;
            box-sizing: border-box;
            margin: 20px;
        }

        /* Titre */
        .form-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #007a95;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }

        /* Style des champs */
        .form-control {
            margin-bottom: 20px;
        }

        .form-control label {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #555;
        }

        .form-control input,
        .form-control select,
        .form-control textarea {
            width: 100%;
            padding: 14px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
        }

        .form-control input:focus,
        .form-control select:focus,
        .form-control textarea:focus {
            border-color: #007a95;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

        /* Boutons */
        .btn {
            display: block;
            width: 100%;
            background-color: #007a95;
            color: white;
            font-size: 18px;
            padding: 16px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            text-align: center;
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn:active {
            background-color: #003f8a;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <!-- Titre -->

        <!-- Formulaire -->
        {{ form_start(form) }}
        <div class="form-control">
            {{ form_widget(form) }}
        </div>
        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
